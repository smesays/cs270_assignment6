<h2><%= @location.name %></h2>
<p><b>Description: </b><%= @location.description %></p>
<p><b>Owner: </b><%= "#{@location.owner.first_name} #{@location.owner.last_name}" %></p>

<h3>Events with this Location</h3>
<table>
    <tr>
        <th>Name</th>
        <th>Description</th>        
    </tr>
    <% @location.events.each do |i| %>
        <tr>
            <td><%= i.name %></td>
            <td><%= i.description %></td>
        </tr>
    <% end %>
</table>

<h3>Visitors</h3>
<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>        
        <th>E-mail</th>
    </tr>
    <% @location.visitors.each do |i| %>
        <tr>
            <td><%= i.first_name %></td>
            <td><%= i.last_name %></td>
            <td><%= i.email %></td>
        </tr>
    <% end %>
</table>